
{
  "compilerOptions": {
    /* Essential Changes */
    "target": "ES2020",                 // Changed from es2016
    "module": "commonjs",
    "moduleResolution": "node",         // Added
    "outDir": "./dist",                 // Added
    "rootDir": "./src",                 // Added
    "types": ["jest", "node"],          // Added
    
    /* Keep These As-Is */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    /* Remove All Commented Options */
  },
  "include": ["src/**/*"],              // Added
  "exclude": ["node_modules"]           // Added
}
