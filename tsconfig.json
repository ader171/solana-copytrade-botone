{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@constants/*": ["../constants/*"],
      "@config/*": ["../config/*"]
    },
    "types": ["jest", "node"]
  },
  "include": ["src/**/*", "constants/**/*", "config/**/*"],
  "exclude": ["node_modules"]
}
